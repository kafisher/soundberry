!!!
html
    head
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="HandheldFriendly", content="True")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        link(rel="stylesheet", type="text/css", href="/css/font-awesome.min.css")
        link(rel="stylesheet", href="/css/base.css")
        link(rel="stylesheet", href="/css/#{ theme || 'dark' }.css")

    body(ontouchstart="")
        #main
            #menu
                .blank
                ul
                    li
                        form.search
                            .right
                                a#search-type-tracks.btn-mini.selected: i.icon-music
                                a#search-type-users.btn-mini: i.icon-user
                            i.icon-search
                            input(placeholder="Search...", autocapitalize="off", autocorrect="off")

                    li: a(href="/stream")
                        i.icon-leaf
                        |  Stream
                    li: a(href="/favorites")
                        i.icon-heart
                        |  Favorites
                    li: a(href="/followings")
                        i.icon-share-alt
                        |  Following
                    li: a(href="/followers")
                        i.icon-reply
                        |  Followers

                .controls
                    #now_playing
                    a.last: i.icon-step-backward
                    a.stop: i.icon-pause
                    a.next: i.icon-step-forward
                    input(type="range", name="volume")

            #header
                .center: h1 #{ title || 'Soundberry' }
                .left: a.btn.menu: i.icon-reorder
                .right: a.btn.refresh: i.icon-refresh

            #content
                .blank
                .container

        script(src="/js/jquery.min.js")
        script(src="/js/hammer.min.js")
        script(src="/js/base.js")
        script#loading-template(type="text/html")
            .loading: img.loader(src="data:image/png;base64,")
